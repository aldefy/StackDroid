<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stackdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.stackdroid.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stackdroid.ui.MainActivity"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="Rush_db_version"
            android:value="1" />
        <meta-data
            android:name="Rush_db_name"
            android:value="stackdroid.db" />
        <meta-data
            android:name="Rush_debug"
            android:value="true" />
        <meta-data
            android:name="Rush_requires_table_annotation"
            android:value="false" />
        <meta-data
            android:name="Rush_log"
            android:value="true" />
    </application>

</manifest>